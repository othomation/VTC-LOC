{% extends 'base.html.twig' %}

{% block title %}Conducteur
{% endblock %}

{% block body %}
	<h1>Conducteur</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ conducteur.id }}</td>
			</tr>
			<tr>
				<th>Prenom</th>
				<td>{{ conducteur.prenom }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ conducteur.nom }}</td>
			</tr>
			<tr>
				<th>Vehicule
				</th>
				<td>
					<ul>
						{% if conducteur.getVehicules() is empty %}
							<p>Pas de location en cours...</p>
						{% else %}
							{% for vehicule in conduteur.getVehicules() %}
								<li>
									{{vehicule}}
								</li>
							{% endfor %}
						{% endif %}
					</ul>
				</td>
			</tr>

		</tbody>
	</table>

	<a href="{{ path('conducteur_index') }}" class="btn btn-primary">back to list</a>

	<a title="Editer le conducteur" href="{{ path('conducteur_edit', {'id': conducteur.id}) }}">
		<i class="bi bi-pencil-square"></i>
	</a>


	{{ include('conducteur/_delete_form.html.twig') }}
{% endblock %}
