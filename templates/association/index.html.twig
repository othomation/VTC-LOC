			{% else %}
				<tr>
					<td colspan="2">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	{{ include('association/_form.html.twig',{'button_label': 'Ajouter cette association'}) }}


{% endblock %}
